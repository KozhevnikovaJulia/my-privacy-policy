{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitReturns": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  }
}
